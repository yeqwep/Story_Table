function init(self)
  msg.post(".", "acquire_input_focus")
  self.spos = vmath.vector3(-500 , 0 , 1)
  gui.play_particlefx(gui.get_node("particlefx"))
end

-- マウスカーソルの位置にパーティクルを発生させる
function on_input(self, action_id, action)
  if action.x ~= nil then
    self.spos.x = action.x
    self.spos.y = action.y
  end
  gui.set_position(gui.get_node("particlefx"), self.spos)
end
